Algoritmo ejercicio6triangulo
	
	Definir base, altura, resultado Como Real;
	
	Escribir "Programa para calcular el area de un triángulo";
	
	Escribir Sin Saltar"Por favor, introduzca la base";
	Leer base;
	
	Escribir Sin Saltar"Por favor,introduzca la altura";
	Leer altura;
	
	resultado <- base * altura / 2;
	
	Escribir "El area del triángulo es la siguiente ", resultado;
FinAlgoritmo
